{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "Node",
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}